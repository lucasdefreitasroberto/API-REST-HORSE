program backend;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  Horse,
  System.JSON,
  Horse.Commons
  Horse.Jhonson;

var
  App: THorse;
  Users: TJSONArray;

begin

  App := THorse.Create;

  App.Use(Jhonson);

  Users := TJSONArray.Create;

  App.Get('/users',
    procedure(Req: THorseRequest; Res: THorseResponse; Next: TProc)
    begin
      Res.Send<TJSONAncestor>(Users.Clone).Status(200);
    end);

  App.Post('/users',
    procedure(Req: THorseRequest; Res: THorseResponse; Next: TProc)
    var
      User: TJSONObject;
    begin
      User := Req.Body<TJSONObject>.Clone as TJSONObject;
      Users.AddElement(User);
      Res.Send<TJSONAncestor>(Users.Clone).Status(201);
    end);

  App.Listen(4000);

end.

